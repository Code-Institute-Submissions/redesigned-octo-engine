<div class="container">
  <div class="box-above-below">
  </div>
  {{#if isVideoExpanded}}
    <div class="box" id="video-box">
      <div id="x-button">
        <i class="fas fa-window-close" {{action 'toggleBody'}}></i>
      </div>
      <video id="home-video" class="video" width="100%" height="100%" controls autoplay>
        <source src="assets/videos/macaque-monkey-on-tree-jumping-climbing-playing_r7u2ngmxl__WL.mp4" type="video/mp4">
          <!-- <source src="movie.ogg" type="video/ogg"> -->
          Your browser does not support the video tag.
      </video>
    </div>
  {{else}}
    <div class="box">
      <i class="far fa-play-circle" id="home-play-icon" {{action "toggleBody"}}></i>
    </div>
  {{/if}}
  <div class="box-above-below">
  </div>
</div>
